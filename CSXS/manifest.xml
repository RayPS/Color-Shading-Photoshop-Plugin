<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="4.0" ExtensionBundleId="ColorCraft" ExtensionBundleVersion="1.0" ExtensionBundleName="ColorCraft" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Contact mailto="ray@rayps.com"/>
    <Abstract href="http://lab.rayps.com/cs/"/>
	<ExtensionList>
		<Extension Id="colorcraft" Version="1.3" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
            <Host Name="PHXS" Version="[14.0,16.0]" />
            <Host Name="PHSP" Version="[14.0,16.0]" />
            <Host Name="ILST" Version="[18.0,19.0]"/>
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="4.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="colorcraft">
			<DispatchInfo >
				<Resources>
				<MainPath>./index.html</MainPath>
				<ScriptPath>./js/jsx/ai.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>ColorCraft</Menu>
					<Geometry>
						<Size>
							<Height>500</Height>
							<Width>200</Width>
						</Size>
                    <MinSize>
                            <Height>200</Height>
                            <Width>200</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>500</Height>
                            <Width>400</Width>
                        </MaxSize>
                        
					</Geometry>
					<Icons>
                        <Icon Type="Normal">./img/normal.png</Icon>
                        <Icon Type="RollOver">./img/rollover.png</Icon>
                        <Icon Type="DarkNormal">./img/darknormal.png</Icon>
                        <Icon Type="DarkRollOver">./img/darkrollover.png</Icon>
					</Icons>					
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>